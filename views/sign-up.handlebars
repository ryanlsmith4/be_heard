<!--signup form-->

<!--name="modelvalue"-->
<div class="row">
  <script>const dirty = document.getElementById('user-username');
  const clean = DOMPURIFY.clean(dirty)</script>

    <div class="col-sm-4 col-sm-offset-4">
        <form action="/sign-up" method="POST">
            <legend>Register</legend>
            <div class="form-group">
                <label for="user-username">First Name</label>
                <input for="user-firstname" type="text" name="firstname" class="form-control" id="user-firstname" placeholder="First Name">
            </div>
            <div class="form-group">
                <label for="user-username">last Name</label>
                <input for="user-lastname" type="text" name="lastname" class="form-control" id="user-lastname" placeholder="Last name">
            </div>
            <div class="form-group">
                <label for="user-username">Username</label>
                <input for="user-username" type="text" name="username" class="form-control" id="user-username" placeholder="Username">
            </div>
            <div class="form-group">
                <label for="user-password">Password</label>
                <input for="user-password" type="password" name="password" class="form-control" id="user-password" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="user-password">Confirm Password</label>
                <input for="user-confirm-password" type="password" name="confirm_password" class="form-control" id="user-confirm-password" placeholder="Confrm Password">
            </div>
            <div>
                <p id="validate-status"></p>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input for="email" type="email" name="email" class="form-control" id="email" placeholder="email">
            </div>
            <div class='text-right'>
                <button type="submit" class="btn btn-primary" onclick="validate()">Register</button>
            </div>
        </form>
    </div>
</div>
