<!-- views/blogs-show.handlebars -->
<div class="">
    <h1>{{blog.title}}</h1>
    <h2>{{blog.articleTitle}}</h2>
    <p>{{blog.description}}</p>
    <p>{{blog.dropDown}}</p>
    <h2>Comments</h2>
    <hr>
    {{#each blog.comments}}
    <p>{{this.content}}</p>
    {{/each}}
</div>
{{#if currentUser}}
    <p>
        <form method="PUT" action="/blogs/view/{{blog._id}}/edit">
            <button type="submit" class="btn btn-primary btn-sm">Edit</button>
        </form>
    </p>

    <!--Delete Button-->
    <p>
        <form method="POST" action="/blogs/view/{{blog._id}}?_method=DELETE">
            <button type="submit" class="btn btn-primary btn-sm">Delete</button>
        </form>
    </p>
    {{else}}
    <!-- CommunityBoard Button -->
<p>
    <form method="GET" action="/blogs/views/community/board">
        <button type="submit" class="btn btn-primary btn-sm">Community Board</button>
    </form>
</p>
{{/if}}
<!--comments-->
{{#if currentUser}}
<form action="/blogs/view/{{blog.id}}/comments" method="POST">
    {{else}}
    <form action="/sign-up" method="get">
        {{/if}}

   <textarea class='form-control' name="content" placeholder="Comment"></textarea>
   <div class="text-right">
     <button type="submit">Save</button>
   </div>
 </form>

<style>
    .nice-buttons {
        margin: auto;
        width: 50%;
        /* border: 3px solid green; */
        padding: 10px;
    }
</style>
