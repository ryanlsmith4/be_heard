<!--views/partials/review-form.handlebars-->

<fieldset class="container">
    <legend>Community Event</legend>
    <!-- TITLE -->
    <!--name="modelvalue"-->
    <p>
        <label for="blog-title">Event Title</label><br>
        <input id="blog-title" type="text" name="title" value="{{blog.title}}" />
    </p>
    <p>
        <label for="blog-title">Event Date</label><br>
        <input id="date" for="date"  type="date" name=date value="{{blog.date}}" />
    </p>


      <label for="blog-zip">Zip</label> <br>
      <input id="blog-zip" type="text" name="zip" value="{{blog.zip}}">



    <!-- Event Purpose -->
    <p>
        <label for="article-title">Event Purpose e.g <br>involvment, fun, activism</label><br>
        <input id="article-title" type="text" name="articleTitle" value="{{blog.articleTitle}}" />
    </p>

    <!-- Event DESCRIPTION -->
    <p>
        <label for="blog-description">Event description</label><br>
        <textarea id="blog-description" name="description" rows="10" />{{blog.description}}</textarea>
    </p>
</fieldset>


<footer class="blog-footer">

    <a href="#">Back to top</a>
    </p>
</footer>

<style>
    input {
        width: 25%;
        height: 15%;
        padding: 12px 20px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        background-color: #f8f8f8;
        resize: none;
    }

    textarea {
        width: 100%;
        height: 150px;
        padding: 12px 20px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        background-color: #f8f8f8;
        resize: none;
    }
</style>
